<h2><%= @year_month[0, 4] %>/<%= @year_month[4, 2] %></h2>
<h2>VOICEROID動画 再生数ランキング TOP100</h2>
<% if @pre_month %>
  <%= link_to "前月",   "#{@pre_month}" , class: 'btn' %>
<% end %>
<% if @next_month %>
  <%= link_to "翌月",   "#{@next_month}" , class: 'btn' %>
<% end %>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>順位</th><th>投稿日</th><th>タイトル</th><th>再生数</th><th>コメント数</th><th>マイリスト数</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each.with_index(1) do |video, idx| %>
    <tr>
      <td><%=idx%></td>
      <td><%=DateTime.parse(video.START_DATE).strftime("%Y-%m-%d %H:%M:%S")%></td>
      <td><%=link_to video.TITLE, "https://www.nicovideo.jp/watch/#{video.CONTENT_ID}", target: "_blank"%></td>
      <td><%=video.VIEW_CNT.to_i%></td>
      <td><%=video.COMMENT_CNT.to_i%></td>
      <td><%=video.MYLIST_CNT.to_i%></td>
    </tr>
    <% end %>
  </tbody>
</table>